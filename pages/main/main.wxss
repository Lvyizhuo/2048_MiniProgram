/* 容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #FAF8EF;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

/* 顶部区域 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
  margin-bottom: 80rpx;
}

.logo-container {
  width: 280rpx;
  height: 140rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.logo-image {
  width: 100%;
  height: 100%;
}

.game-title {
  font-size: 72rpx;
  font-weight: bold;
  color: #776E65;
}

.title-text {
  display: inline-block;
  background: linear-gradient(135deg, #F2B179, #F65E3B);
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

/* 主要内容区 */
.main-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

/* 最高分显示 */
.best-score {
  background-color: #BBADA0;
  border-radius: 12rpx;
  padding: 30rpx 50rpx;
  margin-bottom: 60rpx;
  text-align: center;
  min-width: 200rpx;
}

.best-score-label {
  font-size: 28rpx;
  color: #EEE4DA;
  margin-bottom: 12rpx;
}

.best-score-value {
  font-size: 64rpx;
  font-weight: bold;
  color: #FFFFFF;
}

/* 按钮组 */
.button-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.main-button {
  width: 100%;
  padding: 35rpx 0;
  background-color: #8F7A66;
  border-radius: 12rpx;
  text-align: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.main-button:active {
  background-color: #7A6B5A;
  transform: scale(0.98);
}

.button-text {
  font-size: 40rpx;
  font-weight: bold;
  color: #F9F6F2;
}

.btn-challenge {
  background-color: #F2B179;
}

.btn-challenge:active {
  background-color: #E0A068;
}


/* 底部链接 */
.footer-links {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 30rpx 0;
  gap: 20rpx;
}

.link-text {
  font-size: 24rpx;
  color: #776E65;
  text-decoration: underline;
}

.link-text:active {
  color: #8F7A66;
}

.link-separator {
  font-size: 24rpx;
  color: #BBADA0;
}

